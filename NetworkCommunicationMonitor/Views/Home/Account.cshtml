    <script>
        $(document).ready(function () {
            $('#example').dataTable();
            app.formMask();
        });

        //card.js
        var card = new Card({
            form: '.card-form',
            container: '.card-wrapper',

            placeholders: {
                number: '**** **** **** ****',
                name: 'Full Name',
                expiry: '**/****',
                cvc: '***'
            }
        });

        function validInfo() {
            let firstname = $('#firstname').val();
            let lastname = $('#lastname').val();
            let address = $('#address').val();
            let phone = $('#input2').val();
            let limit = parseInt($('#limit').val());
            let balance = parseInt($('#balance').val());

            if (!firstname) {
                errHandler('Firstname cannot be empty', $('#first-form'), 1);

            } else if (!lastname) {
                errHandler('Lastname cannot be empty', $('#last-form'), 1);

            } else if (!address) {
                errHandler('Address cannot be empty', $('#address-form'), 1);

            } else if (!phone) {
                errHandler('Phone cannot be empty', $('#phone-form'), 1);
                $('#address-form').removeClass('has-error');

            } else if (!limit) {
                errHandler('Limit cannot be empty', $('#limit-form'), 1);

            } else if (!balance) {
                errHandler('Balance cannot be empty', $('#balance-form'), 1);

            } else if (balance > limit) {
                errHandler('Limit cannot be bigger than Balance', $('#balance-form'), 1);

            } else {
                errHandler();
                validCard(firstname, lastname, address, phone, limit, balance);
            }
        }

        function validCard(firstname, lastname, address, phone, limit, balance) {
            //var addAccount = $('#addAccount');
            var date1 = $('#date2').val();
            var name1 = $('#name').val();
            var cardID = $('#cardID').val();
            var cvc = $('#cvc').val();
            var datetime = /^(?:(?:0[1-9])|(?:1[0-2]))\ \/\ (?:19|2\d{1})[0-9][0-9]$/; //validate date
            var name = /^[a-zA-Z]*\ [a-zA-Z]*$/;; // validate name
            var cardNumber = /^\d{4}\ \d{4}\ \d{4}\ \d{2,4}$/; // validate card number
            var cardNumber2 = /^\d{4}\ \d{4}\ \d{4}\ \d{4}\ \d{1,3}$/; // validate card number
            var cardNumber3 = /^\d{4}\ \d{6}\ \d{4,6}$/; // validate card number
            var cvc1 = /^\d{3}$/;; // validate cvc
            var isDate = datetime.test(date1);
            var isName = name.test(name1);
            var isCard1 = cardNumber.test(cardID);
            var isCard2 = cardNumber2.test(cardID);
            var isCard3 = cardNumber3.test(cardID);
            var isCVC = cvc1.test(cvc);

            if (isCard1 || isCard2 || isCard3) {
                if (isName) {
                    if (isDate) {
                        if (isCVC) {
                            errHandler();
                            $.ajax({
                                method: 'POST',
                                url: `/Home/AddAccount`,
                                data: {
                                    firstname: firstname,
                                    lastname: lastname,
                                    address: address,
                                    input2: phone,
                                    limit: limit,
                                    balance: balance,
                                    number: cardID,
                                    name: name1,
                                    expiry: date1,
                                    cvc: cvc
                                },
                                success: (result) => {
                                    if (result.includes('successfully')) {
                                        result = "Account has been successfully added with Card " + cardID;
                                        alert(result);
                                        $('#close-add-account').click();
                                        window.location.reload();
                                    } else {
                                        alert(result);
                                    }
                                },
                                error: (result) => {
                                    console.log(result);
                                }
                            });
                        }
                        else {
                            errHandler('Invalid CVC', $('#cvc-form'), 2);
                        }
                    }
                    else {
                        errHandler('Invalid expiry time', $('#date-form'), 2);
                    }
                }
                else {
                    errHandler('Invalid full name, e.g. "Dwayne Johnson"', $('#name-form'), 2)
                }
            }
            else {
                errHandler('card number should be 14-19 digits', $('#card-form'), 2)
            }
        }

        function errHandler(err, element, index) {
            if (index && index == 1) {
                $('#prev-btn').click();
            }
            $('#first-form').removeClass('has-error');
            $('#last-form').removeClass('has-error');
            $('#address-form').removeClass('has-error');
            $('#phone-form').removeClass('has-error');
            $('#limit-form').removeClass('has-error');
            $('#balance-form').removeClass('has-error');
            $('#card-form').removeClass('has-error');
            $('#name-form').removeClass('has-error');
            $('#date-form').removeClass('has-error');
            $('#cvc-form').removeClass('has-error')

            if (element) {
                element.addClass('has-error');
            }
            if (err) {
                $('#error-msg').empty();
                $('#error-msg').append('<h3 class="text-center text-danger" >' + err + '</h3>');
                setTimeout(function () {
                    $('#error-msg h3').fadeOut();
                }, 6000);
            }
        }
