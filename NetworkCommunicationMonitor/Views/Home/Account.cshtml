                                <div class="actions pull-right">
                                    <i class="fa fa-plus" data-toggle="modal" data-target="#add-account" title="add"></i>
                                    <i class="fa fa-trash-o" title="delete" data-toggle="modal" data-target="#delete-account"></i>
                                    <i class="fa fa-pencil" title="edit" data-toggle="modal" data-target="#edit-account"></i>
                                    <i class="fa fa-expand"></i>
                                    <i class="fa fa-chevron-down"></i>
                                </div>
                            </div>
                            <div class="panel-body">
                                @{
                                    List<NetworkCommunicationMonitor.Models.Account> accounts = (List<NetworkCommunicationMonitor.Models.Account>)ViewData["Accounts"];
                                    if (accounts.Count == 0)
                                    {
                                        <h3>There are no accounts in the database.</h3>
                                    }
                                    else
                                    {
                                        <table id="example" class="table table-striped table-bordered" cellspacing="0" width="100%">
                                            <thead>
                                                <tr style="cursor:pointer">
                                                    <th>Account ID</th>
                                                    <th>First Name</th>
                                                    <th>Last Name</th>
                                                    <th>Credit Cards</th>
                                                    <th>Address</th>
                                                    <th>Phone</th>
                                                    <th>Limit</th>
                                                    <th>Balance</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @{
                                                    foreach (NetworkCommunicationMonitor.Models.Account account in accounts)
                                                    {
                                                        <tr>
                                                            <td>@account.accountNumber</td>
                                                            <td>@account.firstName</td>
                                                            <td>@account.lastName</td>
                                                            <td>
                                                                <select>
                                                                    @{ foreach (NetworkCommunicationMonitor.Models.Card card in account.cards)
                                                                        {
                                                                            <option>@card.cardNumber</option>
                                                                        }
                                                                    }
                                                                </select>
                                                            </td>
                                                            <td>@account.accountAddress</td>
                                                            <td>@NetworkCommunicationMonitor.Models.Account.formatPhoneNumber(account.phoneNumber)</td>
                                                            <td>@String.Format("{0:C}", account.accountLimit)</td>
                                                            <td>@String.Format("{0:C}", account.accountBalance)</td>
                                                        </tr>
                                                    }
                                                }
                                            </tbody>
                                        </table>
                                    }
                                }
