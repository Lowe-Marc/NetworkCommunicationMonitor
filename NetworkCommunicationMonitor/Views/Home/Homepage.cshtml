    <script>
        var nodes = @Html.Raw(Json.Encode(ViewData["Nodes"]));
        var links = @Html.Raw(Json.Encode(ViewData["Links"]));
        console.log(nodes);
        console.log(links);
        var graph = {
            "nodes": nodes,
            "links": links
        }

        var width = innerWidth,
            height = innerHeight;

        var svg = d3.select("#svg").append("svg")
            .attr("width", width)
            .attr("height", height);

        var simulation = d3.forceSimulation(node)
            .force('link', d3.forceLink().id(d => d.id).distance(d => d.distance))
            .force('collision', d3.forceCollide(1).strength(0.2))
            .force('charge', d3.forceManyBody().strength(-220).distanceMax(1000))
            .force('center', d3.forceCenter(width / 2, height / 2));

        var color = d3.scaleOrdinal(d3.schemeCategory10);

        var link = svg.append("g")
            .attr("class", "links")
            .selectAll("line")
            .data(graph.links)
            .enter().append("line")
            .attr("stroke-width", function (d) {
                return Math.sqrt(d.value);
            });

        var node = svg.append("g")
            .attr("class", "nodes")
            .selectAll("circle")
            .data(graph.nodes)
            .enter()
            .append("circle")
            .attr("r", 12)
            .attr("r", function (d) {
                switch (d.group) {
                    case 0:
                        return 50;
                    case 1:
                        return 10;
                    case 2:
                        return 20;
                }
            })
            .attr("fill", function (d) {
                return color(d.group);
            })
            .call(d3.drag()
                .on("start", dragstarted)
                .on("drag", dragged)
                .on("end", dragended));

        var text = svg.selectAll("text")
            .data(graph.nodes)
            .enter()
            .append("text")
            .style("fill", "#000")
            .style("font-size", "20")
            .attr("dx", function (d) {
                switch (d.group) {
                    case 0:
                        return -70;
                    case 1:
                        return -28;
                    case 2:
                        return -22;
                }
            })
            .attr("dy", function (d) {
                switch (d.group) {
                    case 0:
                        return -55;
                    case 1:
                        return -10;
                    case 2:
                        return -22;
                }
            })
            .text(function (d) {
                return d.id;
            });

        node.append("title")
            .text(function (d) {
                return d.id;
            });

        simulation
            .nodes(graph.nodes)
            .on("tick", ticked);

        simulation.force("link")
            .links(graph.links);

        function ticked() {

            node
                .attr("cx", function (d) {
                    return d.x;
                })
                .attr("cy", function (d) {
                    return d.y;
                });

            text
                .attr("x", function (d) {
                    return d.x;
                })
                .attr("y", function (d) {
                    return d.y;
                });

            link
                .attr("x1", function (d) {
                    return d.source.x;
                })
                .attr("y1", function (d) {
                    return d.source.y;
                })
                .attr("x2", function (d) {
                    return d.target.x;
                })
                .attr("y2", function (d) {
                    return d.target.y;
                });
        }

        function dragstarted(d) {
            if (!d3.event.active) simulation.alphaTarget(0.3).restart();
            d.fx = d.x;
            d.fy = d.y;
        }

        function dragged(d) {
            d.fx = d3.event.x;
            d.fy = d3.event.y;
        }

        function dragended(d) {
            if (!d3.event.active) simulation.alphaTarget(0);
            d.fx = null;
            d.fy = null;
        }
    </script>
