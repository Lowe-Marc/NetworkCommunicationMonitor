<body>
    <section id="main-wrapper" class="theme-default">
        <header id="header">
            <!--logo start-->
            <div class="brand">
                <a href="~/Home/Homepage" class="logo">
                    <i class="fa fa-desktop"></i>
                    <span>Network</span>Monitor
                </a>
            </div>
            <!--logo end-->
            <ul class="nav navbar-nav navbar-left">
                <li class="toggle-navigation toggle-left">
                    <button class="sidebar-toggle" id="toggle-left">
                        <i class="fa fa-bars"></i>
                    </button>
                </li>
                <li class="hidden-xs hidden-sm">
                    <input type="text" class="search" placeholder="Search project...">
                    <button type="submit" class="btn btn-sm btn-search">
                        <i class="fa fa-search"></i>
                    </button>
                </li>
            </ul>
            <ul class="nav navbar-nav navbar-right">
                <li class="dropdown profile hidden-xs">
                    <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown">
                        <span class="meta">
                            <span class="text">@Session["username"]</span>
                            <span class="caret"></span>
                        </span>
                    </a>
                    <ul class="dropdown-menu animated fadeInRight" role="menu">
                        <br />
                        <li>
                            <a href="javascript:void(0);">
                                <span class="icon">
                                    <i class="fa fa-user"></i>
                                </span>My Account
                            </a>
                        </li>
                        <li>
                            <a href="javascript:void(0);">
                                <span class="icon">
                                    <i class="fa fa-cog"></i>
                                </span>Settings
                            </a>
                        </li>
                        <li class="divider"></li>
                        <li>
                            <a href="Index">
                                <span class="icon">
                                    <i class="fa fa-sign-out"></i>
                                </span>Logout
                            </a>
                        </li>
                    </ul>
                </li>
                <li class="toggle-fullscreen hidden-xs">
                    <button type="button" class="btn btn-default expand" id="toggle-fullscreen">
                        <i class="fa fa-expand"></i>
                    </button>
                </li>
            </ul>
        </header>
        <!--sidebar left start-->
        <aside class="sidebar sidebar-left">
            <div class="sidebar-profile">
                <div class="profile-body dropdown">
                    <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><h4>@Session["username"] <span class="caret"></span></h4></a>
                    <ul class="dropdown-menu animated fadeInRight" role="menu">
                        <li>
                            <a href="javascript:void(0);">
                                <span class="icon">
                                    <i class="fa fa-user"></i>
                                </span>My Account
                            </a>
                        </li>
                        <li>
                            <a href="javascript:void(0);">
                                <span class="icon">
                                    <i class="fa fa-cog"></i>
                                </span>Settings
                            </a>
                        </li>
                        <li class="divider"></li>
                        <li>
                            <a href="Index">
                                <span class="icon">
                                    <i class="fa fa-sign-out"></i>
                                </span>Logout
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
            <nav>
                <h5 class="sidebar-header">Navigation</h5>
                <ul class="nav nav-pills nav-stacked">
                    <li class="nav-dropdown">
                        <a href="Homepage" title="Network">
                            <i class="fa  fa-fw fa-share-alt"></i> Network
                        </a>
                    </li>
                    <li class="nav-dropdown">
                        <a href="Account" title="Account">
                            <i class="fa  fa-fw fa-user"></i> Account
                            <span class="label label-primary label-circle pull-right">@ViewData["NumAccounts"]</span>
                        </a>
                    </li>
                    <li class="active">
                        <a href="#" title="Credit Card">
                            <i class="fa  fa-fw fa-credit-card"></i> Credit Card
                            <span class="label label-primary label-circle pull-right">@ViewData["NumCards"]</span>
                        </a>
                    </li>
                    <li class="nav-dropdown">
                        <a href="Store" title="Stores">
                            <i class="fa  fa-fw fa-home"></i> Stores
                            <span class="label label-primary label-circle pull-right">@ViewData["NumStores"]</span>
                        </a>
                    </li>
                    <li class="nav-dropdown">
                        <a href="Station" title="Relay Stations">
                            <i class="fa  fa-fw fa-flag-checkered"></i> Relay Stations
                            <span class="label label-primary label-circle pull-right">@ViewData["NumRelays"]</span>
                        </a>
                    </li>
                    <li class="nav-dropdown">
                        <a href="Transaction" title="Transactions">
                            <i class="fa  fa-fw fa-exchange"></i> Transactions
                            <span class="label label-primary label-circle pull-right">@ViewData["NumTransactions"]</span>
                        </a>
                    </li>
                </ul>
            </nav>
        </aside>
        <!--sidebar left end-->
        <!--main content start-->
        <section class="main-content-wrapper">
            <div class="pageheader">
                <h1>Card Detail</h1>
                <div class="breadcrumb-wrapper hidden-xs">
                    <span class="label">You are here:</span>
                    <ol class="breadcrumb">
                        <li>
                            <a href="~/Home/Homepage">Network</a>
                        </li>
                        <li class="active">Card Detail</li>
                    </ol>
                </div>
            </div>
            <div class="alert alert-warning alert-dismissable" style="margin:0">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                <p class="my-font">
                    <strong><i class="fa fa-exclamation-triangle"></i>  Tips:</strong> If you want to operate a card, choose one: <i class="fa fa-plus"></i>  <i class="fa fa-trash-o"></i>  <i class="fa fa-pencil" title="edit" data-toggle="modal"></i> on the right.
                </p>
            </div>
            <section id="main-content" class="animated fadeInUp">
                <div class="row">
                    <div class="col-md-12">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <h3 class="panel-title">Card Tables</h3>
                                <div class="actions pull-right">
                                    <i class="fa fa-plus"  title="add" data-toggle="modal" data-target="#add-card"></i>
                                    <i class="fa fa-trash-o" title="delete" data-toggle="modal" data-target="#delete-card"></i>
                                    <i class="fa fa-pencil" title="edit" data-toggle="modal" data-target="#edit-card"></i>
                                    <i class="fa fa-expand"></i>
                                    <i class="fa fa-chevron-down"></i>
                                </div>
                            </div>
                            <div class="panel-body">
                                @{
                                    List<NetworkCommunicationMonitor.Models.Card> cards = (List<NetworkCommunicationMonitor.Models.Card>)ViewData["Cards"];
                                    if (cards.Count == 0)
                                    {
                                        <h3>There are no credit cards in the database.</h3>
                                    }
                                    else
                                    {
                                        <table id="example" class="table table-striped table-bordered" cellspacing="0" width="100%">
                                            <thead>
                                                <tr>
                                                    <th>Account ID</th>
                                                    <th>Card Number</th>
                                                    <th>First Name</th>
                                                    <th>Last Name</th>
                                                    <th>Expiration Date</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @{
                                                    foreach (NetworkCommunicationMonitor.Models.Card card in cards)
                                                    {
                                                        <tr>
                                                            <td>@card.accountNumber</td>
                                                            <td>@card.cardNumber</td>
                                                            <td>@card.firstName</td>
                                                            <td>@card.lastName</td>
                                                            <td>@card.expirationMonth/@card.expirationYear</td>
                                                        </tr>
                                                    }
                                                }
                                            </tbody>
                                        </table>
                                    }
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </section>
        <!--main content end-->
    </section>
    <!--delete modal start-->
    @using (Html.BeginForm("DeleteCard", "Home", FormMethod.Post))
    {
        <div class="modal fade" id="delete-card" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                        <h1 class="modal-title" id="myModalLabel">Delete</h1>
                    </div>
                    <div class="modal-body">
                        <section class="main-content-wrapper" style="padding:0">
                            <section id="main-content" class="animated fadeInUp">
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="panel panel-default">
                                            <div class="panel-body">
                                                <div class="form-horizontal  col-sm-offset-2">
                                                    <div class="form-group">
                                                        <label class="col-sm-4 control-label">Card number</label>
                                                        <div class="col-sm-7">
                                                            <input type="text" class="form-control" name="delete_cardNumber" placeholder="Card number" maxlength="19" onkeyup="value=value.replace(/[^\d]/g,'')" onbeforepaste="clipboardData.setData('text',clipboardData.getData('text').replace(/[^\d]/g,'')"/>
                                                        </div>
                                                    </div>
                                                    <div class="form-group">
                                                        <label class="col-sm-4 control-label">Confirm Card Number</label>
                                                        <div class="col-sm-7">
                                                            <input type="text" class="form-control" name="confirm_delete_cardNumber" placeholder="Confirm card number" maxlength="19" onkeyup="value=value.replace(/[^\d]/g,'')" onbeforepaste="clipboardData.setData('text',clipboardData.getData('text').replace(/[^\d]/g,'')"/>
                                                        </div>
                                                    </div>
                                                    <div class="form-group">
                                                        <input type="checkbox" class="col-sm-2" id="confirmation-checkbox" required="required" style="min-width:20px;min-height:20px;margin:20px 0 0 10%;" />
                                                        <label class="col-sm-8" for="confirmation-checkbox">I understand I am permenently removing the card with this number from the system.</label>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </section>
                        </section>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                        <input type="submit" class="btn btn-danger" value="Delete" />
                    </div>
                </div>
            </div>
        </div>
    }
    <!--delete modal end-->
    <!--add modal start-->
    @using (Html.BeginForm("AddCard", "Home", FormMethod.Post))
    {
        <div class="modal fade" id="add-card" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                        <h1 class="modal-title my-font" id="myModalLabel"><strong> Add a card</strong></h1>
                    </div>
                    <div class="modal-body">
                        <!--main content start-->
                        <div class="alert alert-warning alert-dismissable" style="margin:0">
                            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                            <p class="my-font"><strong><i class="fa fa-exclamation-triangle"></i> Tips:</strong> If you want to a card, you must link it to an account.</p>
                        </div>
                        <section class="main-content-wrapper" style="padding:0">
                            <section id="main-content" class="animated fadeInUp">
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="panel panel-default">
                                            <div class="panel-body">
                                                <div class="card-wrapper"></div>
                                                <div class="card-form form-horizontal col-sm-offset-2">
                                                    <div class="form-group">
                                                        <label class="col-sm-4 control-label">Card number</label>
                                                        <div class="col-sm-6">
                                                            <input type="text" class="form-control" name="number" placeholder="Card number" required=""/>
                                                        </div>
                                                    </div>
                                                    <div class="form-group">
                                                        <label class="col-sm-4 control-label">Full name</label>
                                                        <div class="col-sm-6">
                                                            <input type="text" class="form-control" name="name" placeholder="Full name"  minlength="4" maxlength="30" required=""/>
                                                        </div>
                                                    </div>
                                                    <div class="form-group">
                                                        <label class="col-sm-4 control-label">Expiry</label>
                                                        <div class="col-sm-6">
                                                            <input type="text" class="form-control" name="expiry" style="margin:0;" placeholder="MM/YYYY" required=""/>
                                                        </div>
                                                    </div>
                                                    <div class="form-group">
                                                        <label class="col-sm-4 control-label">CVC</label>
                                                        <div class="col-sm-6">
                                                            <input type="text" class="form-control" name="cvc" style="margin:0 0 0 -4px;" placeholder="CVC" maxlength="3" required=""/>
                                                        </div>
                                                    </div>
                                                    <div class="form-group">
                                                        <label class="col-sm-4 control-label">Link account</label>
                                                        <div class="col-sm-6">
                                                            <select class="form-control" style="padding:0;" id="accountID" name="accountID">
                                                                @{
                                                                    List<NetworkCommunicationMonitor.Models.Account> accounts = (List<NetworkCommunicationMonitor.Models.Account>)ViewData["Accounts"];
                                                                    foreach (NetworkCommunicationMonitor.Models.Account account in accounts)
                                                                    {
                                                                        <option>@account.accountNumber</option>
                                                                    }
                                                                }
                                                            </select>
                                                        </div>
                                                    </div>
                                                    <div class="form-group">
                                                        <div class="col-sm-10">
                                                            <input type="submit" class="btn btn-success btn-block" value="Submit" />
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </section>
                        </section>
                    </div>
                    <!--main content end-->
                </div>
            </div>
        </div>
    }
    <!--add modal end-->
    <!--edit card start-->
    @using (Html.BeginForm("EditCard", "Home", FormMethod.Post))
    {
        <div class="modal fade" id="edit-card" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                        <h1 class="modal-title" id="myModalLabel">Edit a card</h1>
                    </div>
                    <div class="modal-body">
                        <section class="main-content-wrapper" style="padding:0">
                            <section id="main-content" class="animated fadeInUp">
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="panel panel-default">
                                            <div class="panel-body">
                                                <div class="card-form form-horizontal col-sm-offset-2">
                                                    <div class="form-group">
                                                        <label class="col-sm-4 control-label">Card number</label>
                                                        <div class="col-sm-6">
                                                            <input type="text" class="form-control" name="cardNumber" maxlength="19" placeholder="Card number" onkeyup="value=value.replace(/[^\d]/g,'')" onbeforepaste="clipboardData.setData('text',clipboardData.getData('text').replace(/[^\d]/g,'')"/>
                                                        </div>
                                                    </div>
                                                    <div class="form-group">
                                                        <label class="col-sm-4 control-label">Last name</label>
                                                        <div class="col-sm-6">
                                                            <input type="text" class="form-control" id="edit-lastname" name="firstName" placeholder="First name"  minlength="2" maxlength="15"/>
                                                        </div>
                                                    </div>
                                                    <div class="form-group">
                                                        <label class="col-sm-4 control-label">First name</label>
                                                        <div class="col-sm-6">
                                                            <input type="text" class="form-control" id="edit-firstname" name="lastName" placeholder="Last name"  minlength="2" maxlength="15"/>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </section>
                        </section>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                        <input type="submit" class="btn btn-danger" value="Submit Changes" />
                    </div>
                </div>
            </div>
        </div>
    }
    <!--edit card end-->
